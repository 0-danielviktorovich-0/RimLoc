{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RimLoc GUI",
  "version": "0.1.0",
  "identifier": "com.rimloc.gui",
  "build": {
    "frontendDist": "../frontend"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "permissions": [
            "core:default",
            "dialog:default",
            "dialog:allow-open",
            "dialog:allow-save",
            "shell:default",
            "shell:allow-open"
          ]
        }
      ]
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RimLoc GUI",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico", "icons/icon.png"],
    "category": "DeveloperTool",
    "shortDescription": "Tauri desktop GUI for RimLoc",
    "publisher": "RimLoc Team"
  },
  "plugins": {}
}
