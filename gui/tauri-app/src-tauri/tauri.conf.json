{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RimLoc GUI",
  "version": "0.1.0",
  "identifier": "com.rimloc.gui",
  "build": {
    "frontendDist": "../frontend"
  },
  "app": {
    "security": {
      "csp": null,
      "assetProtocol": { "enable": true },
      "pattern": { "use": "brownfield" }
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "title": "RimLoc GUI",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico", "icons/icon.png"],
    "category": "DeveloperTool",
    "shortDescription": "Tauri desktop GUI for RimLoc",
    "publisher": "RimLoc Team"
  },
  "plugins": {}
}
